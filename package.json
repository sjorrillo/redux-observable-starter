{
  "name": "redux-observable-starter",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "clean": "npm cache clean --force && rimraf node_modules build",
    "clean:dist": "rimraf build",
    "start": "bnr build-client:dev",
    "start:server": "bnr build-server:dev",
    "prebuild:client": "rimraf build .cache",
    "build:client": "bnr build-client:prod",
    "build:server": "bnr build-server:prod",
    "lint": "npm run lint-files -- src --ext .js,.ts,.tsx",
    "lint:fix": "npm run lint -- --fix ",
    "lint-files": "eslint --cache --cache-location='.cache/' -f friendly",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "test": "FORCE_COLOR=true TZ=UTC node --max-old-space-size=4096 node_modules/.bin/jest --notify --logHeapUsage --detectOpenHandles --config jest.config.js"
  },
  "betterScripts": {
    "build-client:dev": {
      "command": "parcel src/resources/public/index.html --out-dir build/client/dev",
      "env": {
        "NODE_ENV": "development",
        "PORT": 3500
      }
    },
    "build-client:prod": {
      "command": "parcel build src/resources/public/index.html --no-source-maps --detailed-report --out-dir build/client/prod --public-url ./",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "build-server:dev": {
      "command": "nodemon --exec babel-node --extensions '.ts,.js,.json' src/server/bin/www.ts",
      "env": {
        "NODE_ENV": "development",
        "PORT": 4000
      }
    },
    "build-server:prod": {
      "command": "babel --extensions '.ts,.js,.json' --out-dir build/server/prod src/server",
      "env": {
        "NODE_ENV": "production",
        "PORT": 4000
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{json,js,ts,tsx}": [
      "eslint --fix --max-warnings=0 -f friendly",
      "prettier --write"
    ],
    "src/**/*.scss": [
      "sass-lint-auto-fix",
      "sass-lint -v"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.6",
    "@babel/node": "^7.8.7",
    "@babel/plugin-proposal-export-default-from": "^7.8.3",
    "@babel/plugin-proposal-export-namespace-from": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.5",
    "@babel/plugin-proposal-optional-chaining": "^7.9.0",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/plugin-transform-typescript": "^7.9.4",
    "@babel/preset-env": "^7.8.6",
    "@babel/preset-react": "^7.8.3",
    "@babel/preset-typescript": "^7.9.0",
    "@testing-library/jest-dom": "^5.5.0",
    "@testing-library/react": "^10.0.4",
    "@testing-library/react-hooks": "^3.2.1",
    "@testing-library/user-event": "^10.1.0",
    "@types/express": "^4.17.6",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^25.1.3",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.7.6",
    "@types/react": "^16.8.6",
    "@types/react-redux": "^7.1.7",
    "@types/redux-actions": "^2.6.1",
    "@types/yup": "^0.26.32",
    "better-npm-run": "^0.1.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-universe": "^2.3.0",
    "eslint-formatter-friendly": "^7.0.0",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-jest-dom": "^2.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react-hooks": "^2.5.0",
    "husky": "^4.2.5",
    "jest": "^25.2.3",
    "lint-staged": "^10.2.2",
    "nock": "^12.0.3",
    "nodemon": "^2.0.3",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-bundle-visualiser": "^1.2.0",
    "parcel-plugin-custom-dist-structure": "^1.1.9",
    "parcel-plugin-static-files-copy": "^2.3.1",
    "prettier": "1.19.1",
    "rimraf": "^3.0.2",
    "sass-lint": "^1.13.1",
    "sass-lint-auto-fix": "^0.21.0",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.9.1",
    "typescript": "^3.8.2"
  },
  "dependencies": {
    "@material-ui/core": "^4.9.9",
    "@material-ui/icons": "^4.9.1",
    "apollo-server-express": "^2.12.0",
    "classnames": "^2.2.6",
    "connected-react-router": "^6.7.0",
    "glob": "^7.1.6",
    "graphql-tools": "^5.0.0",
    "lodash": "^4.17.15",
    "merge-graphql-schemas": "^1.7.8",
    "query-string": "^6.11.1",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "react-hook-form": "^5.3.1",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.1.2",
    "redux": "^2.0.0 || ^3.0.0 || ^4.0.0-0",
    "redux-actions": "^2.6.5",
    "redux-observable": "^1.2.0",
    "rxjs": "^6.5.4",
    "yup": "^0.28.3"
  },
  "staticFiles": {
    "staticPath": [
      "resources/public"
    ],
    "excludeGlob": [
      "favicon.ico",
      "index.html"
    ]
  },
  "customDistStructure": {
    "config": {
      "js": [
        ".js",
        ".js.map"
      ],
      "css": [
        ".css",
        ".css.map"
      ],
      "img": [
        ".jpg",
        ".jpeg",
        ".png",
        ".gif"
      ],
      "media": [
        ".svg"
      ]
    },
    "options": {
      "development": false
    }
  }
}
